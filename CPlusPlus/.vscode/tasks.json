{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ File",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-O2",
                "-Wall",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}